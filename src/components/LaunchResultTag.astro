---
import type { Launch } from "@contracts/launch";
import { launchResult } from "@contracts/launch";

interface Props {
  launch: Launch;
}

const { launch } = Astro.props;
---

<span
  class:list={[
    "text-xs font-semibold mr-2 px-2.5 py-0.5 rounded",
    {
      "bg-green-400 text-green-900": launch.success,
      "bg-red-400 text-red-900": !launch.success,
    },
  ]}
>
  {launchResult(launch)}
</span>
