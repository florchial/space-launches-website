---
interface Props {
    href: string;
}

const { href } = Astro.props;
---
<a href={`${href}`}
class="flex items-center gap-2 rounded-full bg-slate-800 py-2 px-5 text-sm font-semibold
         text-white hover:bg-slate-700 focus:outline-none focus-visible:outline-2 
         focus-visible:outline-offset-2 focus-visible:outline-white/50 active:text-slate-400 
         shadow-md transition-colors duration-200 mr-2 mb-2">
    <slot name="before"/>
    <slot />
    <slot name="after"/>
</a>
